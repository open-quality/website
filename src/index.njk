---
layout: layouts/base.njk
title: OpenQuality Cloud
hero: true
---
<section class="section">
  <div class="grid-2">
    <div>
      <h2>{{ highlights.problemStatements.problem.title }}</h2>
      <p class="text-large">{{ highlights.problemStatements.problem.summary }}</p>
      <ul class="feature-list">
        {% for item in highlights.problemStatements.problem.bullets %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>
    <div>
      <h2>{{ highlights.problemStatements.solution.title }}</h2>
      <p class="text-large">{{ highlights.problemStatements.solution.summary }}</p>
      <ul class="feature-list">
        {% for item in highlights.problemStatements.solution.bullets %}
          <li>{{ item }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<section class="section section-dark">
  <h2 class="section-title">Platform Features</h2>
  <div class="grid-3">
    {% for feature in highlights.features %}
      <div class="card">
        <div class="icon">{{ feature.icon }}</div>
        <h3>{{ feature.title }}</h3>
        <p>{{ feature.description }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="cta-buttons" style="margin-top: 2rem;">
    <a class="btn btn-primary" href="/features/">Explore all features</a>
  </div>
</section>

<section class="section">
  <h2 class="section-title">Use Cases</h2>
  <div class="grid-2">
    {% for useCase in highlights.useCases %}
      <div class="card">
        <h3>{{ useCase.title }}</h3>
        <p>{{ useCase.description }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="cta-buttons" style="margin-top: 2rem;">
    <a class="btn btn-secondary" href="/use-cases/">See detailed scenarios</a>
  </div>
</section>

<section class="section section-dark">
  <h2 class="section-title">Built For</h2>
  <div class="grid-2">
    {% for audience in highlights.audiences %}
      <div class="card">
        <h3>{{ audience.title }}</h3>
        <p>{{ audience.description }}</p>
        <div class="benefit">{{ audience.benefit }}</div>
      </div>
    {% endfor %}
  </div>
</section>

<section class="section">
  <h2 class="section-title">Tech Stack</h2>
  <div class="tech-stack">
    {% for tech in highlights.techStack %}
      <div class="tech-item">
        <strong>{{ tech.label }}:</strong> {{ tech.value }}
      </div>
    {% endfor %}
  </div>
</section>
